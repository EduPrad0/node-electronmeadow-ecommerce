generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model likes {
  id         Int      @id @default(autoincrement())
  id_product Int
  id_user    Int
  products   products @relation(fields: [id_product], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users      users    @relation(fields: [id_user], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model products {
  id             Int     @id @default(autoincrement())
  url_image      String?
  description    String  @db.VarChar(255)
  category       String  @db.VarChar(255)
  pricing        Decimal @db.Decimal(10, 5)
  how_many_times Int?    @default(1)
  quantity       Int?    @default(1)
  likes          likes[]
}

model users {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamp(6)
  name       String   @db.VarChar(255)
  password   String   @db.VarChar(255)
  email      String   @db.VarChar(255)
  cpf        String?  @db.VarChar(255)
  tel        String?  @db.VarChar(255)
  likes      likes[]

  @@unique(email)
  @@unique(tel)
  @@unique(cpf)
  @@unique(name)
}
